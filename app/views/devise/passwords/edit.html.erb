<h2>Alterar sua senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> mÃ­nimo de caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "Nova senha" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "Confirmar nova senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Alterar senha" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
